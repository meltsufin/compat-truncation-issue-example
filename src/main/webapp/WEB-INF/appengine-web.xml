<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
  <env>flex</env>
  <threadsafe>true</threadsafe>
  <manual-scaling>
    <instances>1</instances>
  </manual-scaling>
  <health-check>
    <enable-health-check>false</enable-health-check>
  </health-check>
  <system-properties>
    <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
  </system-properties>

  <!-- For <env>flex</env> -->
  <beta-settings>
    <setting name="enable_app_engine_apis" value="true"/>
  </beta-settings>

  <resources>
    <memory-gb>4</memory-gb>
  </resources>

  <env-variables>
    <env-var name="SHUTDOWN_LOGGING_THREAD_DUMP" value="true" />
    <env-var name="SHUTDOWN_LOGGING_HEAP_INFO" value="true" />
  </env-variables>

</appengine-web-app>
